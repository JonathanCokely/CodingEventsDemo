@model List<CodingEventsDemo.Models.EventCategory>

<h1>Coding Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No event categories yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
        </tr>
        @foreach (var evtcat in Model)
        {
            <tr>
                <td>@evtcat.Id</td>
                <td>@evtcat.Name</td>
            </tr>
        }
    </table>
}